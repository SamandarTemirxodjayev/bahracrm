{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "curly": "error",
        "quotes": ["error", "double"],
        "indent": ["error", 2],
        "semi": ["error", "always"]
    }
}
